rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow anyone to read files
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Allow authenticated users and guests to upload images
    match /reports/{userId}/{fileName} {
      allow write: if true;
      // In production, you might want to add size limits:
      // allow write: if request.resource.size < 5 * 1024 * 1024; // 5MB limit
    }
    
    // Allow authenticated users and guests to upload audio
    match /audio/{userId}/{fileName} {
      allow write: if true;
      // In production, you might want to add size limits:
      // allow write: if request.resource.size < 10 * 1024 * 1024; // 10MB limit
    }
  }
}
